<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springboot.mapper.UsersMapper">

    <resultMap id="BaseResultMap" type="com.spring.domain.Users">
        <result column="id" jdbcType="INTEGER" property="id" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="age" jdbcType="INTEGER" property="age" />
    </resultMap>

    <select id="getUsersList" resultType="com.spring.domain.Users">
        select * from users
    </select>

    <insert id="saveUser" parameterType="com.spring.domain.Users">
       insert into users(name,age) values(#{name},#{age})
    </insert>

    <select id="getUserById" resultType="com.spring.domain.Users" parameterType="int">
        select * from users where id=#{id} ;
    </select>

</mapper>
